{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,   
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@controllers/*": ["src/controllers/*"],
      "@src/*": ["./src/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*.ts"],
  "exclude": ["node_modules","dist"]
}
